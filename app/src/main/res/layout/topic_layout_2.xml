<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/path_level"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/topic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic 2: Daily routines"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageButton
        android:id="@+id/btnLevel1_2"
        android:layout_width="95dp"
        android:layout_height="75dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/button_level_icon4"
        android:contentDescription="Level 1_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topic2" />


    <ImageButton
        android:id="@+id/btnLevel2_2"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_level_icon3"
        android:contentDescription="Level 2_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLevel1_2" />

    <ImageButton
        android:id="@+id/btnLevel3_2"
        android:layout_width="95dp"
        android:layout_height="75dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="184dp"
        android:background="@drawable/button_level_icon2"
        android:contentDescription="Level 3_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLevel2_2" />

    <ImageButton
        android:id="@+id/btnLevel4_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/button_level_icon1"
        android:contentDescription="Level 4_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLevel3_2" />
</androidx.constraintlayout.widget.ConstraintLayout>
